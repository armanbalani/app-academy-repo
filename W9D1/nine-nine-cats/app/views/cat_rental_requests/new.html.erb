<h1>Make a Request to Rent a Cat</h1>
<form action= <%= cat_rental_requests_url %> method="post">
<label for="cat">Cat</label>
<select name="cat_rental_request[cat_id]" id="color">
    <option value="" selected disabled hidden>-- select a cat --</option>
    <% Cat.all.each do |cat| %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
</select>
<br>
<label for="start">Start Date</label>
<input type="date" name="cat_rental_request[start_date]" id="start">
<br>
<label for="end">End Date</label>
<input type="date" name="cat_rental_request[end_date]" id="end">
<br>
<input type="submit" value="Submit This Form">

</form>
